<!DOCTYPE html>
<html>
<head>
  <title>Levels</title>
  <%= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true %>
  <%= javascript_include_tag "application", "data-turbolinks-track" => true %>
  <%= csrf_meta_tags %>
  
</head>


<body>
<header>
  <div class="row">
    <div class="large12">

   <!--  <img src="assets/treetants2.jpg"> -->
     </div>
  </div>
<header>

<div id="container">



  
<div class="menu">
    <nav>
      
        <li><%= link_to('Home', '/') %></li>
        <% if @current_user.nil? %>      
          <li><%= link_to('Create a new User', new_user_path) %></li>
          <li><%= link_to('Login as an existing User', login_path) %></li>
        <% end %>
        <% if @current_user.present? %>
          <li><%= link_to('Post Feed', posts_path) %></li>
          <li><%= link_to('Add a New Post', new_post_path) %></li>
          <li><%= link_to('Sign Out', login_path, :method => :delete) %></li>
          <% if @current_user.is_admin? %>
            <li><%= link_to('Users', users_path) %></li>
          <% end %>
        <% end %>
      
    </nav>
</div>
   
    <%= yield %>
  
  </div>

    <% if flash[:notice].present? %>
    <div class="notice">
      <%= flash[:notice] %>
    </div>
  <% end %>

</body>
</html>
