<div class="user">

 <ul>
  <div class="userfonts">

   <%= form_for @post do |f| %>
    <% @post.errors.full_messages.each do |error| %>
      <li><%= error %></li>
      <% end %>
   <li>
      <%= f.label :user_id %>
      <%= f.select :user_id, User.all.map{|user|[user.name, user.id]}, :include_blank => true %>
   </li>

   <li>
     
      <%= f.label :title %>
      <%= f.text_field :title %>
    </li>
   <li>
    <%=f.label :body %><br/>
    <%=f.text_area :body %>
   </li> 

  <li>
     <%= f.label :image %>
    <%= f.text_field :image %>
   
   </li>
   
    <p> <%= f.submit %> </p>

    <% end %>

  </div>
 </ul>
</div>


