<h2><%= @user.name %></h2>
<ul>
  <li><%= image_tag(@user.avatar, :class => 'medium') %></li>
  <li><%= @user.email %></li>

  <% @user.posts.each do |post| %>
    <% image_tag(post.body) %>

   <p><%= link_to(post.title, post) %></p>
  
   <% end %>
   <li> <%= link_to('Create a new Post', new_post_path) %></li>
   <li><%= link_to('Back View all the Users', users_path) %></li>
        
   	
   	 

  
</ul>